#!/bin/bash

brew install git
brew install bash-completion
brew install tree
brew install python
brew install socat

pip install powerline-status

git clone git@github.com:powerline/fonts.git /tmp/powerline
/tmp/powerline/install.sh

mkdir -p ~/.vim/after/ftplugin/

cp ${PWD}/git-completion.bash ~

ln -sv ${PWD}/.bashrc ~
ln -sv ${PWD}/.bash_profile ~
ln -sv ${PWD}/.bash_completion.d ~
ln -sv ${PWD}/.vimrc ~
ln -sv ${PWD}/.git-prompt.sh ~

ln -sv ${PWD}/c.vim ~/.vim/after/ftplugin/
ln -sv ${PWD}/go.vim ~/.vim/after/ftplugin/
